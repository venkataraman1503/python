a = "BENJAMINTHOMSON"
n = len(a)
var = len(a)//2


def function1(l,i,j):
    if l==0:
        print(a[i],end=" ")
    elif j-var==l:
        print(a[j],end=" ")
    else:
        print(" ",end=" ")


for i in range(n):
    j=n-i-1
    if i==n+1:
        break
    for l in range(var+1):
        if i<j:
            function1(l,i,j)
        else:
            function1(l,j,i)
    print("\n")
